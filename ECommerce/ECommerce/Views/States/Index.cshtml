@model IEnumerable<WebECommerce.Models.State>

@{
    ViewBag.Title = "States";
}
<div>
    <div class="col-mod-8">
        <h2>List of States</h2>
        <img src="~/Images/colombia.png" height="180" width="200" />
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-bordered table-hover table-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeState)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeState)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StateId }, new { @class = "btn btn-warning btn-lg" })
            @Html.ActionLink("Details", "Details", new { id=item.StateId }, new { @class = "btn btn-info btn-lg" })
            @Html.ActionLink("Delete", "Delete", new { id=item.StateId }, new { @class = "btn btn-danger btn-lg" })
        </td>
    </tr>
}

</table>
